@{
    ViewData["Title"] = "ShowResult";
}


<div class="contact-form spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact__form__title">
                    @{
                        if (ViewBag.resultCode != null)
                        {
                            if (ViewBag.resultCode == "Authorised")
                            {
                                <h3> Thank you for shopping. Your payment was successful. <br /> </h3>
                                <h5> Please use the following reference number to track your order: @ViewBag.merchantreference</h5>
                            }
                            else if (ViewBag.resultCode == "Refused")
                            {
                                if (ViewBag.refusalReason != null)
                                {
                                    <h3> Your payment was refused for the following reason: @ViewBag.refusalreason <br /> </h3>
                                    <h5>
                                        Please use the following reference number to troubleshoot:
                                        <span style="color:red">@ViewBag.merchantreference </span>
                                    </h5>
                                }
                                else
                                {
                                    <h3>Your payment was refused. <br /> </h3>
                                    <h5>
                                        Please use the following reference number to troubleshoot:
                                        <span style="color:red"> @ViewBag.merchantreference </span>
                                    </h5>
                                }
                            }
                            else if (ViewBag.resultCode == "Pending")
                            {
                                <h3>Your payment is pending.<br /> </h3>
                                <h5>
                                    Please use the following reference number to troubleshoot:
                                    <span style="color:red"> @ViewBag.merchantreference </span>
                                </h5>
                            }
                            else if (ViewBag.resultCode == "Error")
                            {
                                <h3> An error occured while making your payment: @ViewBag.refusalreason <br /> </h3>
                                <h5>
                                    Please use the following reference number to troubleshoot:
                                    <span style="color:red">@ViewBag.merchantreference</span>
                                </h5>
                            }
                            else if (ViewBag.resultCode == "Received")
                            {
                                <h3>Your payment is being processed. We will update the status shortly!<br /> </h3>
                                <h5>
                                    Please use the following reference number to troubleshoot:
                                    <span> @ViewBag.merchantreference </span>
                                </h5>
                            }
                            else if (ViewBag.resultCode == "Cancelled")
                            {
                                <h3>Your payment has been cancelled.<br /> </h3>
                                <h5>
                                    Please use the following reference number to troubleshoot:
                                    <span> @ViewBag.merchantreference </span>
                                </h5>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<section class="contact spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                    <div class="contact__widget">
                        <span class="icon_phone"></span>
                        <h4>Phone</h4>
                        <p>+6584030289</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                    <div class="contact__widget">
                        <span class="icon_pin_alt"></span>
                        <h4>Address</h4>
                        <p>29 west coast</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                    <div class="contact__widget">
                        <span class="icon_clock_alt"></span>
                        <h4>Open time</h4>
                        <p>10:00 am to 23:00 pm</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                    <div class="contact__widget">
                        <span class="icon_mail_alt"></span>
                        <h4>Email</h4>
                        <p>namanmehrotra2@gmail.com</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

